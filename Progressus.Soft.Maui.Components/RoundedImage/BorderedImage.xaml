<?xml version="1.0" encoding="utf-8" ?>
<components:BorderItem 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Progressus.Soft.Maui.Components"
    x:Class="Progressus.Soft.Maui.Components.BorderedImage"
    x:Name="self">

    <Image  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
            Source="{Binding Source={x:Reference self}, Path=ImageSource}" 
            Aspect="{Binding Source={x:Reference self}, Path=Aspect}"/>

</components:BorderItem>
